<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        tools:context=".ui.track.TrackFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/colorBackground"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/example_title"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:gravity="center"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/colorSecondary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/label_tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_tempo"
            android:textSize="14sp"
            android:textColor="@color/colorTextDisabled"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp" />


        <TextView
            android:id="@+id/text_bpm"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:textSize="56sp"
            android:text="@string/example_bpm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header" />

        <TextView
            android:id="@+id/label_bpm"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/label_bpm"
            android:textColor="@color/colorTextDisabled"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/text_bpm"
            app:layout_constraintTop_toTopOf="@id/text_bpm"
            app:layout_constraintBottom_toBottomOf="@id/text_bpm" />

        <TextView
            android:id="@+id/text_tempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="5"
            android:text="@string/example_tempo_label"
            android:textAlignment="center"
            android:textColor="@color/colorTextWeak"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="@+id/text_bpm"
            app:layout_constraintStart_toStartOf="@+id/text_bpm"
            app:layout_constraintTop_toBottomOf="@+id/text_bpm" />

        <TextView
            android:id="@+id/label_beats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_beats"
            android:textSize="14sp"
            android:textColor="@color/colorTextDisabled"
            android:textAllCaps="true"
            app:layout_constraintTop_toBottomOf="@id/text_tempo"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_edit_primary_24dp"
            android:theme="@style/FABDark"
            app:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/colorTextSecondary" />

        <View
            android:id="@+id/img_division"
            style="@style/ImageButtonInvisible"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:layout_constraintStart_toEndOf="@+id/label_subdivisions"
            app:layout_constraintTop_toBottomOf="@+id/label_subdivisions"
            android:layout_marginStart="36dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/beat_placeholder"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            app:layout_constraintTop_toBottomOf="@id/label_beats"
            android:layout_marginTop="8dp"
            android:layout_marginStart="52dp"
            android:layout_marginEnd="52dp"
            >

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/label_subdivisions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/label_subdivisions"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDisabled"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/beat_placeholder" />

        <TextView
            android:id="@+id/label_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/label_comment"
            android:textAllCaps="true"
            android:textColor="@color/colorTextDisabled"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_division" />

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            android:text="@string/example_comment"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_comment" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>