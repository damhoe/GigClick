<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?actionBarSize"
    tools:context=".ui.metronome.MetronomeFragment">

    <TextView
        android:id="@+id/text_bpm"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAlignment="center"
        android:includeFontPadding="false"
        android:textSize="56sp"
        android:text="@string/example_bpm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_bpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_bpm"
        android:textColor="@color/colorTextDisabled"
        android:textSize="12sp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="@+id/text_bpm"
        app:layout_constraintStart_toStartOf="@+id/text_bpm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_tempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="5"
        android:text="@string/example_tempo_label"
        android:textAlignment="center"
        android:textColor="@color/colorTextWeak"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/text_bpm"
        app:layout_constraintStart_toStartOf="@+id/text_bpm"
        app:layout_constraintTop_toBottomOf="@+id/text_bpm" />

    <View
        android:id="@+id/pendulum_background"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/text_bpm"
        android:background="@drawable/pendulum_background"
        />

    <com.damhoe.gigclick.ui.metronome.PendulumView
        android:id="@+id/pendulum_foreground"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/pendulum_background"
        app:layout_constraintBottom_toBottomOf="@id/pendulum_background"
        app:layout_constraintStart_toStartOf="@id/pendulum_background"
        app:layout_constraintEnd_toEndOf="@id/pendulum_background"
        android:background="@android:color/transparent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_black_24dp"
        android:theme="@style/FABDark"
        app:tint="@color/colorTextSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"
        app:elevation="4dp"
        />

    <ImageButton
        android:id="@+id/button_division"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="@id/button_play"
        app:layout_constraintBottom_toBottomOf="@id/button_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_play"
        app:srcCompat="@drawable/ic_music_black_24dp"
        style="@style/ImageButtonInvisible"
        />

    <ImageButton
        android:id="@+id/button_mode"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="@id/button_play"
        app:layout_constraintBottom_toBottomOf="@id/button_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_play"
        app:srcCompat="@drawable/ic_sandclock_black_24dp"
        style="@style/ImageButtonInvisible"
        />


    <ImageView
        android:id="@+id/rotary_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rotary_knob_background"
        app:layout_constraintBottom_toTopOf="@id/button_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"
        />

    <com.damhoe.gigclick.ui.metronome.RotaryView
        android:id="@+id/rotary_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rotary_background"
        app:layout_constraintBottom_toBottomOf="@id/rotary_background"
        app:layout_constraintStart_toStartOf="@id/rotary_background"
        app:layout_constraintEnd_toEndOf="@id/rotary_background">

        <com.damhoe.gigclick.ui.RotatableImageView
            android:id="@+id/knob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rotary_knob_foreground"
            android:contentDescription="@string/content_knob" />

        <com.damhoe.gigclick.ui.RotatableImageView
            android:id="@+id/ring"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rotary_ring_unpressed"
            android:contentDescription="@string/content_ring" />

    </com.damhoe.gigclick.ui.metronome.RotaryView>

    <ImageButton
        android:id="@+id/button_increase"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@drawable/ic_next_black_24dp"
        app:layout_constraintTop_toTopOf="@id/rotary_background"
        app:layout_constraintBottom_toBottomOf="@id/rotary_background"
        app:layout_constraintStart_toEndOf="@id/rotary_background"
        android:layout_marginStart="16dp"
        style="@style/ImageButtonInvisible" />

    <ImageButton
        android:id="@+id/button_decrease"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/invisible_button_background"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_before_black_24dp"
        app:layout_constraintTop_toTopOf="@id/rotary_background"
        app:layout_constraintBottom_toBottomOf="@id/rotary_background"
        app:layout_constraintEnd_toStartOf="@id/rotary_background"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/button_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rotary_background"
        app:layout_constraintBottom_toBottomOf="@id/rotary_background"
        app:layout_constraintStart_toStartOf="@id/rotary_background"
        app:layout_constraintEnd_toEndOf="@id/rotary_background"
        android:text="@string/label_tap"
        android:textColor="@color/colorTextDisabled"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textAllCaps="true"
        android:ems="2"
        android:gravity="center"
        />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/beat_placeholder"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        app:layout_constraintTop_toBottomOf="@id/pendulum_background"
        android:layout_marginTop="8dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        >

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/button_add_beat"
        android:layout_width="36dp"
        android:layout_height="36dp"
        style="@style/ImageButtonInvisible"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_round_add_box_24dp"
        app:layout_constraintTop_toTopOf="@id/beat_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        />

    <ImageButton
        android:id="@+id/button_delete_beat"
        android:layout_width="36dp"
        android:layout_height="36dp"
        style="@style/ImageButtonInvisible"
        android:src="@drawable/ic_round_delete_box_24dp"
        app:layout_constraintTop_toTopOf="@id/beat_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>