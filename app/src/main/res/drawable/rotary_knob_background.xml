<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="-90"
                android:startColor="#3000"
                android:endColor="#1888"/>
            <size
                android:width="150dp"
                android:height="150dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="-90"
                android:startColor="#9fff"
                android:endColor="#2222"/>
            <stroke
                android:color="@android:color/transparent"
                android:width="8dp"/>
            <size
                android:width="150dp"
                android:height="150dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <stroke
                android:color="@android:color/transparent"
                android:width="20dp"/>
            <solid android:color="@color/colorBackground"/>
        </shape>
    </item>
</layer-list>